{
  "name": "biosky",
  "version": "0.1.0",
  "description": "Decentralized biodiversity platform on AT Protocol",
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "generate-types": "lex gen-api ./src/generated ./lexicons",
    "test:publish": "tsx scripts/publish-observation.ts",
    "ingester": "tsx src/ingester/index.ts",
    "appview": "tsx src/appview/api.ts",
    "media-proxy": "tsx src/ingester/media-proxy.ts",
    "frontend:dev": "vite src/frontend",
    "frontend:build": "vite build src/frontend --config vite.config.ts"
  },
  "dependencies": {
    "@atproto/api": "^0.13.0",
    "@atproto/jwk-jose": "^0.1.0",
    "@atproto/lexicon": "^0.4.0",
    "@atproto/oauth-client-node": "^0.2.0",
    "@atproto/sync": "^0.1.0",
    "@atproto/xrpc-server": "^0.6.0",
    "@prisma/client": "^7.2.0",
    "cbor-x": "^1.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "maplibre-gl": "^4.1.0",
    "pg": "^8.11.0",
    "prisma": "^7.2.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.4.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "@types/ws": "^8.5.10",
    "dotenv": "^17.2.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}
